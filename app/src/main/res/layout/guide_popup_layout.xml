<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/item_margin_padding_normal">

    <TextView
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_padding_large"
        android:text="@string/message_save_guide" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkboxDoNotShowAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_padding_small"
        android:text="@string/do_not_show_again"
        android:theme="@style/checkBoxComponent" />

</LinearLayout>